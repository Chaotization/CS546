<div id="error" class="error" hidden>I'm an error. I will change through Client-Side JS</div>
<div>
    <h1 class="login">{{title}}</h1>
    <form id="registration-form" action="/register" method="post">
        <label for="firstNameInput">First Name:</label>
        <input type="text" name="firstNameInput" id="firstNameInput">

        <br>
        <label for="lastNameInput">Last Name: </label>
        <input type="text" name="lastNameInput" id="lastNameInput">
        <br>

        <label for="emailAddressInput">Email Address: </label>
        <input type="email" name="emailAddressInput" id="emailAddressInput">

        <br>

        <label for="passwordInput">Password: </label>
        <input type="password" name="passwordInput" id="passwordInput">
        <br>

        <label for="confirmPasswordInput">Confirm Password: </label>
        <input type="password" name="confirmPasswordInput" id="confirmPasswordInput">
        <br>

        <label for="roleInput">Role: </label>
        <select name="roleInput" id="roleInput">
            <option value="" >  </option>
            <option value="admin">Admin</option>
            <option value="user">User</option>
        </select>

        <br>
        <input type="submit" value="Sign Up">
    </form>
    <a href="/login">Already have an account? Click here to log-in</a>
    <script src="/public/js/lab10.js"></script>
</div>



